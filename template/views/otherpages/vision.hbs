		.dept-img {
			display: flex;
			justify-content: center;
			align-items: center;
			margin: 0;
			padding: 0
		}
		.dept-img img {
			height: 400px;
			width: 60%;
			padding: 20px;
		}
		.dept-info {
			width: 100%;
			display: flex;
			justify-content: center;
			align-items: center;
		}
		.dept-box {
			width: 85%;
		}
		.dept-box,
		.vision,
		.mission,
