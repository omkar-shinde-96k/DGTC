			font-family: 'Niconne', cursive;
			font-size: 30px;
			line-height: 30px;
			font-weight: 5px;
		}
		#sub-dept,
		#sub-dept a {
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
		}
		#sub-dept a {
			width: 86%;
			height: 40px;
			background: rgb(53, 53, 223);
			margin: 10px 10px;
			color: white;
			border-radius: 20px;
		}
		.sub {
			display: flex;
			justify-content: center;
			align-items: center;

		}
		.sub h1 {
			color: blue;
		}
		.sub .table-responsive {
			margin-left: 40px;
			/* width: 500px; */
			padding: 0;
			margin-left: 20px;
		}
		th {
			color: red;
		}
		@media screen and (max-width: 500px) {
			.dept-info h1 {
				font-size: 20px;
			}

			.sub {
				flex-direction: column;
			}

			.dept-img img {
				width: 100%;
				height: 250px;
			}

			.dept-box {
				width: 95%;
			}

			.dept-info h1 {
				margin: 10px;
			}

			.dept-info p {
				font-size: 20px;
			}
		}
